<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <link rel="shortcut icon" href="images/FAVICON.png" type="image/x-icon">
  <title>Login Page </title>
  <%- include('layouts/styles') %>

</head>

<body class="sub_page">
  <div class="hero_area">
    <div class="hero_bg_box">
      <img src="images/bg.png" alt="">
    </div>
    
    <%- include('layouts/navbar') %>
    </div>

    <section class="vh-100">
        <div class="container-fluid h-custom">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
              <img src="images/login.jpg"
                class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
              <form action="/login" method="POST">
                <div class="d-flex align-items-center justify-content-center">
                  <h4 class="font-weight-bold pb-3">Login into your Account!</h4>

                </div>
      
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <label class="form-label mb-1">Email Address</label>
                  <input type="email" name="email" class="form-control form-control-lg"
                    placeholder="Enter a valid email address" autofocus autocomplete="off" required />
                </div>
      
                <!-- Password input -->
                <div class="form-outline mb-3">
                  <label class="form-label mb-1">Password</label>
                  <input type="password" name="password" class="form-control form-control-lg"
                    placeholder="Enter password" autocomplete="off"  required/>
                </div>
      
                <div class="d-flex justify-content-between align-items-center">
                  <!-- Checkbox -->
                  <div class="form-check mb-0">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                    <label class="form-check-label" for="form2Example3">
                      Remember me
                    </label>
                  </div>
                  <a href="#!" class="text-body">Forgot password?</a>
                </div>
      
                <div class="text-center text-lg-start mt-4 pt-2">
                  <% if (error) { %>
                    <p style="color: red; font-weight: 700;">Error: <%= error %></p>
                <% } %>

                  <button type="submit" class="btn btn-primary btn-lg"
                    style="padding-left: 2.5rem; padding-right: 2.5rem; width: 100%;">Login</button>
                  <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/register"
                      class="link-danger">Sign Up</a></p>
                </div>
      
              </form>
            </div>
          </div>
        </div>

      </section>
  
  

  <%- include('layouts/footer') %>

</body>

</html>