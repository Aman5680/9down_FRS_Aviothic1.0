<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <link rel="shortcut icon" href="images/FAVICON.png" type="image/x-icon">
  <title>Registration Page </title>
  <%- include('layouts/styles') %>

</head>

<body class="sub_page">
  <div class="hero_area">
    <div class="hero_bg_box">
      <img src="images/bg.png" alt="">
    </div>
    
    <%- include('layouts/navbar') %>
 
  </div>

  <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 100%;">
      <h4 class="card-title mt-3 text-center">Create Account</h4>
      <form action="/register" method="POST">
        <!-- <div class="form-group input-group">
          <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
              <input name="fullname" class="form-control" placeholder="Full name" type="text">
          </div>  -->
        
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
         </div>
            <input name="email" class="form-control" placeholder="Email address" type="email" required>
        </div> 
        
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
         </div>
            <input name="username" class="form-control" placeholder="Username" type="text" required>
        </div> 

        <!-- <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
        </div>
          <input name="phnumber" class="form-control" placeholder="Phone number" type="text">
        </div> -->


        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
            <input name="password" class="form-control" placeholder="Create password" type="password" required>
        </div>
        
        <% if (error) { %>
          <p style="color: red; font-weight: 700;">Error: <%= error %></p>
      <% } %>
      
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block w-100"> Sign Up  </button>
        </div> <!-- form-group// -->      
        <p class="text-center">Have an account? <a href="login">Sign In</a> </p>                                                                 
    </form>
</article>


  <%- include('layouts/footer') %>

</body>

</html>